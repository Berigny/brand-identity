# Example environment variables for brand-identity project
# Copy to .env.local and fill in with your own values

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme
NEO4J_DATABASE=neo4j

OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o-mini

GROK_API_KEY=your-grok-key
RAG_ENDPOINT=https://your-rag-service/search

# Azure OpenAI (Azure API-compatible OpenAI client)
# Example:
# OPENAI_API_BASE=https://<your-resource-name>.openai.azure.com/
# OPENAI_API_VERSION=2024-06-01
# OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
OPENAI_API_KEY=your-azure-openai-key
OPENAI_API_BASE=https://your-azure-openai-endpoint/
OPENAI_API_VERSION=2024-06-01
OPENAI_DEPLOYMENT_NAME=your-deployment-name

# LLM provider selection (optional)
# Values: openrouter | azure | grok | auto
# If omitted or set to auto, priority is: openrouter -> azure -> grok
LLM_PROVIDER=auto

# LiteLLM proxy (minimal routing)
LITELLM_MASTER_KEY=supersecret
OPENROUTER_API_KEY=your-openrouter-key

# Point the app to LiteLLM proxy (OpenAI-compatible)
OPENAI_API_BASE=http://localhost:4000/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDINGS=text-embedding-3-large

# Local embeddings via Ollama
USE_LOCAL_EMB=1
LOCAL_EMB_MODEL=bge-m3
OLLAMA_MODEL=llama3.1

# Rerank / context control
RERANK_TOP_K=3
CONTEXT_MAX_TOKENS=900
# USE_LOCAL_RERANKER=1 enables local cross-encoder (requires sentence-transformers)
USE_LOCAL_RERANKER=0
# RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Local directory loader caps
MAX_FILES=30
MAX_CHARS_PER_FILE=4000
MAX_TOTAL_CHARS=25000

# LLM client timeout (seconds)
LLM_TIMEOUT=60

# Auto-rerank large directory loads
AUTO_RERANK=1
DEFAULT_RERANK_QUERY=brand color rules tokens palette

# Microsoft 365 Agents Toolkit (atk)
# Current public URL for your local API tunnel (e.g. ngrok)
NGROK_URL=https://<id>.ngrok-free.app
# Dev Portal API Key registration id (NOT the secret)
API_KEY_REGISTRATION_ID=your-registration-id
